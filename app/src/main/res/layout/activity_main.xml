<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@color/black">




    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/contentview"
        >


    </RelativeLayout>


    <fragment
        android:id="@+id/contactinfofragment"
        android:name="izm.fraunhofer.de.phoffmn.test3d.fragments.ContactDrawerFragment"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_contact" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/fraunhoferlogotransparent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ninepatch"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:scaleType="fitXY"
        android:src="@drawable/ninepatch"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">






    </LinearLayout>


    <hollowsoft.slidingdrawer.SlidingDrawer
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        drawer:content="@+id/content2"
        drawer:handle="@+id/handle">

        <ImageView
            android:id="@+id/handle"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:background="@drawable/teststatsdrawable"
            android:gravity="center"
            android:src="@drawable/stats" />


        <RelativeLayout
            android:id="@+id/content2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fraunhofergreen"
            android:padding="10dp">

            <ImageView
                android:id="@+id/firstdiagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/formel"
                android:gravity="center"
                android:src="@drawable/dummydiagram" />

            <ImageView
                android:id="@+id/formel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/firstdiagram"
                android:gravity="center"
                android:src="@drawable/dummyformel" />

            <ImageView
                android:id="@+id/seconddiagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/formel"
                android:gravity="center"
                android:src="@drawable/dummydiagramm3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/formel"
                android:layout_alignRight="@id/formel"
                android:layout_below="@+id/formel"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
                android:textColor="@color/abc_primary_text_material_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/firstdiagram"
                android:layout_alignRight="@+id/firstdiagram"
                android:layout_below="@id/firstdiagram"
                android:layout_gravity="right|bottom"

                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
                android:textColor="@color/abc_primary_text_material_dark" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/seconddiagram"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/seconddiagram"
                android:layout_gravity="left|bottom"
                android:gravity="left"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua."
                android:textColor="@color/abc_primary_text_material_dark" />

        </RelativeLayout>


    </hollowsoft.slidingdrawer.SlidingDrawer>

    <Button
        android:id="@+id/showdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Show stored data" />

    <Button
        android:id="@+id/deleteData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/showdata"
        android:text="delete stored data" />


</RelativeLayout>
